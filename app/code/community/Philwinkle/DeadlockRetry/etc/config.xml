<?xml version="1.0"?>
<config>
    <modules>
        <Philwinkle_DeadlockRetry>
            <version>0.1.2</version>
        </Philwinkle_DeadlockRetry>
    </modules>
    <global>
        <events>
            <controller_front_init_before>
                <observers>
                    <philwinkle_deadlockretry>
                        <class>Philwinkle_DeadlockRetry_Model_Observer</class>
                        <method>setup</method>
                    </philwinkle_deadlockretry>
                </observers>
            </controller_front_init_before>
        </events>
    </global>
    <default>
        <system>
            <deadlock>
                <enable>0</enable>
                <serializable>0</serializable>
                <retrycount>10</retrycount>
                <delaypower>2</delaypower>
            </deadlock>
        </system>
    </default>
</config>